<h1>Pets</h1>
{{outlet}}
<div class="row">
  {{#each content as |pet| }}
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3>{{pet.name}}</h3>
          <p>Owner: {{pet.owner}}</p>
          <p>Breed: {{pet.breed}}</p>
          <p>Age: {{pet.age}}</p>
          <p>
            <a href="#" class="btn btn-primary" role="button">Edit</a>
            <a href="#" class="btn btn-danger" role="button">Delete</a>
          </p>
        </div>
      </div>
    </div>
  {{/each}}
</div>

{{#link-to "index"}}Back{{/link-to}}


